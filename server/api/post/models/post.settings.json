{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "picture": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "status": {
      "type": "boolean"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "channels": {
      "collection": "channel",
      "via": "post"
    },
    "category": {
      "model": "category"
    },
    "postTTL": {
      "type": "component",
      "repeatable": true,
      "component": "opening-closing.post"
    }
  }
}
