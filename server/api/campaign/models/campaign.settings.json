{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "name": "campaign"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "picture": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "status": {
      "type": "boolean"
    },
    "user": {
      "via": "campaigns",
      "plugin": "users-permissions",
      "model": "user"
    },
    "channels": {
      "collection": "channel",
      "via": "campaign"
    },
    "category": {
      "model": "category"
    },
    "campaignTTL": {
      "type": "component",
      "repeatable": true,
      "component": "ttl.campaign-ttl"
    }
  }
}
